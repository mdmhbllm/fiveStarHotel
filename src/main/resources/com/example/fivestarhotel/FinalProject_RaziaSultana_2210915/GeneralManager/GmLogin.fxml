        <Label layoutX="150.0" layoutY="30.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Hotel Login"/>

        <Label layoutX="50.0" layoutY="90.0" text="Username:"/>
        <TextField fx:id="usernameTF" layoutX="150.0" layoutY="85.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="140.0" text="Password:"/>
        <PasswordField fx:id="passwordPF" layoutX="150.0" layoutY="135.0" prefWidth="200.0"/>

        <Button layoutX="150.0" layoutY="200.0" text="Login" onAction="#loginOA"/>
